int Solution::canCompleteCircuit(const vector<int> &A, const vector<int> &B) {
    
    int n=A.size(); int count=0;
    int bal=0; 
    int i=0;
    int j=0;
    for(i=0;i<n;i++)
    {
        
        
               if(A[i]>=B[i])
                 {
            
        j=i;
    count=1; 
    bal=A[j%n]-B[j%n];
    j++;
        while(count<n)
        {
            
            bal=bal+A[j%n];
            if(bal>=B[j%n])
            {
                bal=bal-B[j%n];
                count++;}
                
                
                
                else {
                    break;
                }

                j++;
                
        }

        if(count==n)
        {
            return i;
        }
        
        count=0;
        bal=0;
        
            
            
            
        }

        
        
    }
    return -1;
    
    
}
