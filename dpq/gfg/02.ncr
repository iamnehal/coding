long int m=1000000007;

int dp[1001][801];
int ans(int n,int r)
{ 
    
    
    if(dp[n][r]!=-1)return dp[n][r];
    
    if(r>n)
    {
        return 0;
    }
    if(r==0||r==n)
    {
        dp[n][r]=1;
        return 1;
    }
    
    dp[n][r]= ( ans(n-1,r-1)%m +ans(n-1,r)%m )%m;
    return dp[n][r];
    
    
    
}

class Solution{
public:
    int nCr(int n, int r){
    
    memset(dp,-1,sizeof(dp));
    return ans(n,r);
    
    }
};



